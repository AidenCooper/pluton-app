{
  "name": "pluton-app",
  "main": "expo-router/entry",
  "version": "1.0.0-alpha",
  "private": true,
  "engines": {
    "node": "v22.20.0",
    "npm": "11.6.2"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native"
      ]
    }
  },
  "scripts": {
    "android": "export EXPO_NO_GIT_STATUS=1 && npx expo prebuild --clean && npx expo run:android",
    "android:tv": "export EXPO_NO_GIT_STATUS=1 EXPO_TV=1 && npx expo prebuild --clean && npx expo run:android",
    "ios": "export EXPO_NO_GIT_STATUS=1 && npx expo prebuild --clean && npx expo run:ios",
    "ios:tv": "export EXPO_NO_GIT_STATUS=1 EXPO_TV=1 && npx expo prebuild --clean && npx expo run:ios",
    "web": "npx expo start --web --dev-client",
    "doctor": "npx expo-doctor@latest && npx react-compiler-healthcheck@latest",
    "format": "npx prettier . --write",
    "lint": "npx expo lint",
    "test": "npx jest --watchAll"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@react-native-tvos/config-tv": "^0.1.4",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "expo": "~54.0.13",
    "expo-constants": "~18.0.9",
    "expo-dev-client": "~6.0.15",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.8",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.12",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "npm:react-native-tvos",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "eslint": "^9.37.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-testing-library": "^7.12.0",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.12",
    "prettier": "3.6.2",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.0"
  }
}
